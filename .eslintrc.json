{
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:security/recommended", "prettier"],
  "plugins": ["jest", "security", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "jest/expect-expect": "off",
    "security/detect-object-injection": "off",
    "prettier/prettier": "error"
  }
}
